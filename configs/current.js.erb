if (!window.Mobile) Mobile = {};
Mobile.Current = {};



Mobile.Current.setMainLayout = function(layout) {
	if (Mobile.Current.mainLayout && Mobile.Current.mainLayout.name == layout) return;
	
	Mobile.Current.mainLayout = Mobile.Component.generate(layout);
	if (layout)
	  Mobile.BaseLayout.replaceComponent(Mobile.Current.mainLayout);
};